<div class="example-wrapper">

    {{path("vue_article",{'id':42})}}

    <h1>Liste des articles</h1>
    {{ "now"|date("d/m/Y")}}

    {% if articles is defined and articles|length > 0 %}
        <ul>
        {% for article in articles %}
            <li><a href="{{ path("vue_article",{'id':article.id}) }}">{{article.nom}}</a></li>
        {% endfor %}
        </ul>
