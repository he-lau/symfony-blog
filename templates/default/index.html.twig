    {% set nbArticle = articles|length%}


    <h1>Liste des articles</h1>
    <small>{{ "now"|date("d/m/Y")}}</small><br/>
    <small>Nombre d'articles : {{nbArticle}}</small><br/>

    {% if articles is defined and nbArticle > 0 %}
        <ul>
        {% for article in articles %}
            <li><a href="{{ path("vue_article",{'id':article.id}) }}">{{article.titre}}</a> - {{article.dateCreation|date('d/m/Y')}}</li>
        {% endfor %}
        </ul>
    {% else %}
        <p>Pas d'articles.</p>    
    {% endif %}

</div>
